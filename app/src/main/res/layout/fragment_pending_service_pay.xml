<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.cobratelo_app.ui.pay_history.service.ServicePayHistoryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.pay_history.rent.PendingRentPayFragment"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Fecha"
            style="@style/Widget.Cobrateloapp.TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/concept" />

        <TextView
            android:id="@+id/concept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Concepto"
            style="@style/Widget.Cobrateloapp.TextView"
            app:layout_constraintStart_toEndOf="@id/date"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/amount"/>

        <TextView
            android:id="@+id/amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Monto"
            style="@style/Widget.Cobrateloapp.TextView"
            app:layout_constraintStart_toEndOf="@id/concept"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/action"
            android:textAlignment="textEnd" />

        <TextView
            android:id="@+id/action"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="AcciÃ³n"
            style="@style/Widget.Cobrateloapp.TextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/amount"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="textEnd" />

        <!--Divider-->
        <View
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="?attr/dividerHorizontal"
            app:layout_constraintTop_toBottomOf="@id/amount"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp" />
        <!--End Divider-->

        <!--BEGIN RECYCLER VIEW. THIS MUST BE WRITTEN INSIDE A NEW LAYOUT ITEM-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pendingServicePayments_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            app:dataList="@{viewModel.pendingServicePayUI}"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/service_pay_item"
            tools:itemCount="5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"/>

        <!--BE ONLY ENABLED WHEN AT LEAST ONE CHECKBOX IS CHECKED-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/onPayPendingPayments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginVertical="30dp"
            android:text="Pagar"
            android:enabled="false"
            app:layout_constraintTop_toBottomOf="@id/pendingServicePayments_rv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
