<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="state"
            type="com.example.cobratelo_app.ui.pay_history.service.PendingServicePayUI" />

        <variable
            name="listener"
            type="com.example.cobratelo_app.ui.pay_history.service.PendingServicePayListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/date_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{state.date}"
            tools:text="11/08/23"
            style="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintTop_toTopOf="@id/energy_txt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/energy_txt"
            app:layout_constraintBottom_toBottomOf="@id/water_txt"/>

        <TextView
            android:id="@+id/energy_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/energy_lbl"
            tools:text="luz"
            style="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintTop_toTopOf="@id/energy_amount_txt"
            app:layout_constraintEnd_toStartOf="@id/energy_amount_txt"
            app:layout_constraintStart_toEndOf="@id/date_txt"/>

        <TextView
            android:id="@+id/water_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/water_lbl"
            tools:text="agua"
            style="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintEnd_toStartOf="@id/energy_amount_txt"
            app:layout_constraintStart_toEndOf="@id/date_txt"
            app:layout_constraintBottom_toBottomOf="@id/water_amount_txt"/>

        <TextView
            android:id="@+id/energy_amount_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{@string/renter_summary_amount(state.energyAmount)}"
            tools:text="S/. 86.40"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="@id/pay_Cbox"
            app:layout_constraintBottom_toTopOf="@id/water_amount_txt"
            app:layout_constraintEnd_toStartOf="@id/pay_Cbox"
            app:layout_constraintStart_toEndOf="@id/energy_txt"/>

        <TextView
            android:id="@+id/water_amount_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{@string/renter_summary_amount(state.waterAmount)}"
            tools:text="S/. 25.00"
            style="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintTop_toBottomOf="@id/energy_amount_txt"
            app:layout_constraintEnd_toStartOf="@id/pay_Cbox"
            app:layout_constraintStart_toEndOf="@id/water_txt"
            app:layout_constraintBottom_toBottomOf="@id/pay_Cbox"/>

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/pay_Cbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@{state.checked}"
            android:enabled="@{state.enabled}"
            android:onCheckedChanged="@{(b, checked)-> listener.onCheckedChange(state, checked)}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/water_amount_txt"
            android:textAlignment="textEnd"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>