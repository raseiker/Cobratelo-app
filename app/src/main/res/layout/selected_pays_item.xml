<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="stateUI"
            type="com.example.cobratelo_app.ui.pay_history.pay_confirmation.rent.RentPayConfirmationUI" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp">

        <TextView
            android:id="@+id/date_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{stateUI.date}"
            tools:text="11/01/23"
            style="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/concept_txt" />

        <TextView
            android:id="@+id/concept_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{stateUI.concept}"
            tools:text="Renta"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@id/date_txt"
            app:layout_constraintTop_toTopOf="@id/date_txt"
            app:layout_constraintEnd_toStartOf="@id/amount_txt" />

        <TextView
            android:id="@+id/amount_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{stateUI.amount}"
            tools:text="55.20"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:textAlignment="textEnd"
            app:layout_constraintStart_toEndOf="@id/concept_txt"
            app:layout_constraintTop_toTopOf="@id/date_txt"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>